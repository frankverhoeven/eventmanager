{
  "name": "frankverhoeven/eventmanager",
  "description": "Zend Framework EventManager via Config",
  "type": "project",
  "keywords": [
    "Frank Verhoeven",
    "Zend Framework",
    "EventManager"
  ],
  "homepage": "https://frankverhoeven.me/",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1",
    "zendframework/zend-eventmanager": "^3.2",
    "psr/container": "^1.0",
    "container-interop/container-interop": "^1.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.10.0",
    "phpunit/phpunit": "^7.3",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "FrankVerhoeven\\EventManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FrankVerhoeven\\EventManagerTest\\": "test/"
    }
  },
  "extra": [],
  "scripts": {
    "check": [
      "@cs-check",
      "@test",
      "@analyze"
    ],
    "analyze": "phpstan analyze -l max ./src",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-text"
  }
}
